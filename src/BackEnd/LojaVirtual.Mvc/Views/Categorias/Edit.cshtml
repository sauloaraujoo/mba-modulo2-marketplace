@model CategoriaViewModel

@{
    ViewData["Title"] = "Editar Categoria";
}

<h1>@ViewData["Title"]</h1>

<hr />

<form asp-action="Edit">

    <vc:Summary></vc:Summary>

    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="form-group col-md-6">

            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>

            <label asp-for="Descricao"></label>
            <textarea asp-for="Descricao" class="form-control" rows="8">@Model.Descricao</textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>

        </div>
    </div>


    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
